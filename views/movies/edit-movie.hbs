<h2>Edit Movie</h2>
<br>
<form action="/movies/{{id}}" method="post">

    <label for="title">
        Title:
        <input id="movie-title-input" type="text" name="title" value="{{title}}">
    </label>

    <label for="plot">
        Plot:
        <input id="plot-input" type="text" name="plot" value="{{plot}}">
    </label>

    <label for="genre">
        Genre:
        <input id="genre-input" type="text" name="genre" value="{{genre}}">
    </label>

    <br><br>

